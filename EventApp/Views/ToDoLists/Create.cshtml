@model EventApp.Models.ToDoList

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ToDoList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ToDo" class="control-label"></label>
                <input asp-for="ToDo" class="form-control" />
                <span asp-validation-for="ToDo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAdded" class="control-label"></label>
                <input asp-for="DateAdded" class="form-control" />
                <span asp-validation-for="DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateNotify" class="control-label"></label>
                <input asp-for="DateNotify" class="form-control" />
                <span asp-validation-for="DateNotify" class="text-danger"></span>
            </div>           
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NextDay" /> @Html.DisplayNameFor(model => model.NextDay)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NextMonth" /> @Html.DisplayNameFor(model => model.NextMonth)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NextYear" /> @Html.DisplayNameFor(model => model.NextYear)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
